<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nearby_shops_recycler_view_layout_id">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:outlineAmbientShadowColor="#008577"
        android:backgroundTint="@color/app_default_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/main_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <com.github.abdularis.civ.CircleImageView
                android:id="@+id/shop_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/plus"
                />
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/shop_image"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:text="default_text"
                />
            <TextView
                android:id="@+id/category_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/shop_name"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:text="default_text"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/shop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"

                android:text="default_text"
                android:textColor="#f00" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>